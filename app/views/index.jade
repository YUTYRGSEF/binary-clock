doctype
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    title
      | Binary Clock
    meta(name='viewport', content='width=device-width')
    link(rel='shortcut icon', type="image/x-icon", href='/favicon.ico')
    link(href='http://fonts.googleapis.com/css?family=Lato:100,300', rel='stylesheet', type='text/css')
    link(rel='stylesheet', href='app.css')

  body
    .container

      include partials/tbd
      include partials/bcd

    a.settings-btn(href="#settings-modal")

    section.settings-modal#settings-modal.semantic-content(tabindex='-1', role='dialog', aria-labelledby='modal-label', aria-hidden='true')
      .modal-inner
        header
          h2 Settings

        form.modal-content
          .section-label Choose Theme
          .inputs
            .input-group
              input(type="radio", id="default", value="default", name="theme", checked="checked")
              label.theme-select.default(for="default")
                .bg
                .hl
            .input-group
              input(type="radio", id="theme-1", value="theme-1", name="theme")
              label.theme-select.theme-1(for="theme-1")
                .bg
                .hl
            .input-group
              input(type="radio", id="theme-2", value="theme-2", name="theme")
              label.theme-select.theme-2(for"theme-2")
                .bg
                .hl

          .section-label Display Time
          .inputs
            .input-group
              input(type="radio", id="yes", value="yes", name="helper")
              label(for="yes") Yes
            .input-group
              input(type="radio", id="no", value="no", name="helper", checked="checked")
              label(for="no") No

          .section-label Clock Type
          .inputs
            .input-group
              input(type="radio", id="24", value="24", name="clock-type")
              label(for="24") 24h
            .input-group
              input(type="radio", id="12", value="12", name="clock-type", checked="checked")
              label(for="12") 12h
              
          .section-label Clock Mode
          .inputs
            .input-group
              input(type="radio", id="bcd", value="bcd", name="clock-mode")
              label(for="bcd") BCD
            .input-group.lg
              input(type="radio", id="tbd", value="tbd", name="clock-mode", checked="checked")
              label(for="tbd") Sexagesimal

        footer
          p.buttons
            a.btn(href='#!') OK
            a.close(href='#!', title='Close', data-close='Close', data-dismiss='modal') Cancel
          p.credits built by 
            a(href="http://jeffreypierce.net") jeffrey
            
